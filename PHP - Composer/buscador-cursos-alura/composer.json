{
    "name": "pontesvjp/buscador-cursos",
    "description": "Projeto que busca os curso no site da Alura",
    "type": "library",
    "autoload": {
        "psr-4": {
            "Pontesvjp\\BuscadorCursos\\": "src/"
        }
    },
    "authors": [
        {
            "name": "pontesvjp",
            "email": "pontes.vjp@gmail.com"
        }
    ],
    "require": {
        "guzzlehttp/guzzle": "^7.8",
        "symfony/dom-crawler": "7.0.4",
        "symfony/css-selector": "^7.0",
        "symfony/polyfill-ctype": "~1.8",
        "symfony/polyfill-mbstring": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "squizlabs/php_codesniffer": "^3.9",
        "phan/phan": "^5.4"
    },
    "scripts": {
        "test": "phpunit tests\\TestBuscadorDeCursos.php",
        "cs": "phpcs --standard=PSR12 src/",
        "phan": "phan --allow-polyfill-parser",
        "check": [
            "@phan",
            "@cs",
            "@test"
        ],
        "post-update-cmd": [
            "@test"
        ]
    },
    "scripts-descriptions": {
        "check": "Roda as verifica√ßoes do codigo. PHAN, CS, PHPINIT"
    }
}
